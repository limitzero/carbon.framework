<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="LogFileAppender" type="log4net.Appender.FileAppender">
    <file value="C:\Work\repositories\Carbon.Framework\samples\Carbon.Framework.Samples\logs\loan.broker.log.txt" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="DEBUG" />
      <levelMax value="WARN" />

    </filter>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n"/>
    </layout>

  </appender>
  <appender name="ErrorFileAppender" type="log4net.Appender.FileAppender">
    <file value="C:\Work\repositories\Carbon.Framework\samples\Carbon.Framework.Samples\logs\loan.broker.errors.txt" />
    <filter type="log4net.Filter.LevelRangeFilter">
      <levelMin value="ERROR" />
      <levelMax value="FATAL" />

    </filter>
    <layout type="log4net.Layout.PatternLayout,log4net">
      <param name="ConversionPattern" value="%d [%t] %-5p %c [%x] &lt;%X{auth}&gt; - %m%n"/>
    </layout>

  </appender>
  <root>
    <level value="ALL" />
    <appender-ref ref="LogFileAppender" />
    <appender-ref ref="ErrorFileAppender" />

  </root>

</log4net>
